<h1> Articles </h1>

<table class="table table-striped">
    <tr>
        <th> Title </th>
        <th> Content </th>
        <th> Is Published </th>
        <th> Total Words </th>
        <!-- <th> Author </th> -->
        <th> Created At </th>
        <th> Updated At </th>
        <th> Edit </th>
        <th> Delete </th>
    </tr>

    <% articles.forEach(function(article){ %> 
    <tr>
        <td> <a href="/article/detail?id=<%= article._id %>">  <%= article.title %>  </a></td>
        <td> <%= article.content %> </td>
        <td> <%= article.isPublished %> </td>
        <td> <%= article.totalWords %> </td>
        <!-- <td> <%= article.author.name %> </td> -->
        <td> <%= moment(article.createdAt).fromNow() %> </td>
        <td> <%= moment(article.updatedAt).fromNow() %> </td>

        <td> <a href="/article/edit?id=<%= article._id %>"> Edit </a> </td>
        <td> <a href="/article/delete?id=<%= article._id %>"> Delete </a> </td>
    </tr>
<% }) %>
</table>